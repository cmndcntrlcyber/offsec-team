# MCP System Environment Configuration

# MCP-Nexus Configuration
MCP_NEXUS_BASE_URL=http://localhost:3000
MCP_NEXUS_PORT=3000

# Attack-Node MCP Configuration
ATTACK_NODE_BASE_URL=http://localhost:5173
ATTACK_NODE_MCP_URL=http://localhost:3001
ATTACK_NODE_MCP_PORT=3001

# Empire C2 Configuration (for attack-node)
EMPIRE_BASE_URL=http://localhost:1337
EMPIRE_API_TOKEN=your_empire_api_token_here

# Burp Suite Configuration (for attack-node)
BURP_API_URL=http://localhost:1337
BURP_API_KEY=your_burp_api_key_here

# RTPI-Pen MCP Configuration
RTPI_PEN_BASE_URL=http://localhost:8080
RTPI_PEN_MCP_URL=http://localhost:3002
RTPI_PEN_MCP_PORT=3002

# PostgreSQL Configuration (for rtpi-pen)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rtpi_main
POSTGRES_USER=rtpi
POSTGRES_PASSWORD=rtpi_secure_password

# Redis Configuration (for rtpi-pen)
REDIS_HOST=localhost
REDIS_PORT=6379

# Research Agent MCP Configuration
RESEARCH_AGENT_ENDPOINT=https://research-agent-mcp.attck-community.workers.dev
RESEARCH_AGENT_TOKEN=your_research_agent_token_here
RESEARCH_AGENT_TIMEOUT=30000
RESEARCH_AGENT_RETRY_ATTEMPTS=3
RESEARCH_AGENT_MCP_PORT=3003

# Security Configuration
MCP_AUTH_SECRET=your_secure_auth_secret_here
MCP_SSL_CERT_PATH=/path/to/ssl/cert.pem
MCP_SSL_KEY_PATH=/path/to/ssl/key.pem

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/mcp-system.log

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
MAX_RESTART_ATTEMPTS=3
